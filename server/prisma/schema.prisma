generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String     @unique
  password    String
  Receitas Receitas[]

  @@map("users")
}

model Receitas {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  title             String
  description       String
  ingredient        String
  preparartion_mode String
  movie_link        String
  created_at        DateTime? @default(now())
  author_id         User      @relation(fields: [userId], references: [id])
  userId            String    @db.ObjectId
}
